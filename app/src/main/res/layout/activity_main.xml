<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingVertical="20dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="மின்னஞ்சல்"
            android:layout_marginVertical="35dp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="40sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mail_Textinput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="15dp"
            app:hintEnabled="false"
            app:boxStrokeErrorColor="#FF0000"
            android:layout_marginHorizontal="20dp"
            app:boxBackgroundMode="none"
            app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
            >
            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/box_bg"
                android:hint="மின்னஞ்சல் முகவரியை உள்ளிடவும்"
                android:singleLine="true"
                android:textSize="15dp"
                android:gravity="top"
                android:textColor="@color/text_color"
                android:inputType="text"
                android:textColorHint="@color/hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Pass_Textinput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="15dp"
            app:hintEnabled="false"
            app:boxStrokeErrorColor="#FF0000"
            android:layout_marginHorizontal="20dp"
            app:boxBackgroundMode="none"
            app:startIconDrawable="@drawable/ic_baseline_forum_24"
            >
            <EditText
                android:id="@+id/et_subjectMessage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/box_bg"
                android:hint="கருத்தை உள்ளிடவும்"
                android:singleLine="true"
                android:gravity="top"
                android:textSize="15dp"
                android:textColor="@color/text_color"
                android:inputType="text"
                android:textColorHint="@color/hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_Textinput"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginVertical="15dp"
            app:hintEnabled="false"
            app:boxStrokeErrorColor="#FF0000"
            android:layout_marginHorizontal="20dp"
            app:boxBackgroundMode="none"
            >
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/box_bg"
                android:hint="செய்தி உள்ளடக்கத்தை உள்ளிடவும்"
                android:gravity="start"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textSize="15dp"
                android:textColor="@color/text_color"
                android:inputType="text"
                android:textColorHint="@color/hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sendEmail"
            android:layout_width="308dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="அனுப்பு"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            app:backgroundTint="#FF6363"
            android:textSize="16dp"
            android:textColor="@color/text_color_Btn"
            app:cornerRadius="12dp"
            app:rippleColor="@color/hint_color"
            />
    </LinearLayout>

</LinearLayout>